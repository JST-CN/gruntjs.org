doctype xml
feed(xmlns='http://www.w3.org/2005/Atom')
  title Grunt Blog Feed
  link(href='http://gruntjs.org/rss', rel='self')
  link(href='http://gruntjs.org')
  if posts.length
    updated= new Date(posts[0].postRawDate).toISOString()
  id http://gruntjs.org/

  each post in posts
    entry
      title= post.title
      link(href="http://gruntjs.org/blog/#{post.url}")
      content(type='html')
        | <![CDATA[
        | !{post.rssSrc}
        p
          a(href='http://gruntjs.org/blog/#{post.url}', rel="nofollow") Read more
        | ]]>
      id= post.atomId
      updated= new Date(post.postRawDate).toISOString()
      author
        name Grunt Team
